%h1 All Movies

%p{:class => @hilite}
%table#movies
  %thead
    %tr
      %th= link_to 'Movie Title', movies_path(:sort_by => "title"), :id => 'title_header'
      %th Rating
      %th= link_to 'Release Date',  movies_path(:sort_by => "release_date"),:id => 'release_date_header'
      %th More Info
      %th Edit
      %th Delete
    %tbody
      = render :partial=>'movie', :collection => @movies

= link_to 'Add new movie', new_movie_path
%br
%br
= "all_ratings: #{ @all_ratings.inspect}"
%br
= "active_ratings: #{@active_ratings.inspect}"
%br
%br
= form_tag movies_path, :method => :get, :id => "ratings_form" do

  Include:
  %br
  - @all_ratings.each do |rating|
    -# = rating.inspect
    = check_box_tag "ratings[#{rating}]", "1", (@active_ratings.include?(rating)), :id => "ratings_#{rating}"
    = rating
    %br
  = submit_tag 'Refresh', :id => "ratings_submit"
