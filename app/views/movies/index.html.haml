%h1 All Movies

%p{:class => @hilite}
%table#movies
  %thead
    %tr
      %th= link_to 'Movie Title', movies_path(:sort_by => "title"), :id => 'title_header'
      %th Rating
      %th= link_to 'Release Date',  movies_path(:sort_by => "release_date"),:id => 'release_date_header'
      %th More Info
      %th Edit
      %th Delete
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie.title
          %td= movie.rating
          %td= movie.release_date
          %td= link_to "More about #{movie.title}", movie_path(movie)
          %td= link_to 'Edit info', edit_movie_path(movie)
          //%td= link_to 'Delete', movie_path (movie), :method => :delete

= link_to 'Add new movie', new_movie_path
